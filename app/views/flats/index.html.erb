<nav class="navbar navbar-light bg-light border-bottom">
  <div class="container-fluid">
  <div class="navbar-brand"><i class="fa-solid fa-house-user"></i> <%= link_to "Flats", flats_path %></div>
    <form class="d-flex">
      <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
  </div>
</nav>

<div class="container p-4 m-4">
  <h1>All our flats (<%= @flats.count %>)</h1>
  <div class="flats row align-items-start">
    <% @flats.each do |flat| %>
    <div class="flat card col m-3 p-3 rounded bg-secondary bg-gradient" id="flat<%= flat.id%>">
      <h3 class="text-light text-center"><%= flat.name %></h3>
      <p class="m-0"><%= flat.address %></p>
      <img src="<%= flat.img_url %>" class="rounded-3 my-3" alt="">
      <h4 class="text-light">Description:</h4>
      <p class="text-light"><%= flat.description %></p>
      <div class="d-flex justify-content-between p-2">
        <p class="text-info"><i class="fa-solid fa-euro-sign"></i> <%= flat.price_per_night %></p>
        <p class="text-warning"><i class="fa-solid fa-people-roof"></i> <%= flat.number_of_guests %></p>
      </div>
      <p class="py-2 m-0 border-top text-light"><%= link_to "More info", flat_path(flat) %></p>
    </div>
    <% end %>
  </div>
</div>
